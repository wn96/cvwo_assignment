<li>
  <% if user.admin? == false %>
    <%= gravatar_for user, size: 50 %>
    <%= link_to user.name, user %>
      <% if logged_in? && current_user.admin? && !current_user?(user) %>
        | <%= link_to "Delete", user, method: :delete,
                                      data: { confirm: "Are you sure you wish to delete #{user.name}?"} %>
      <% end %>
<% end %>
</li>
